<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adp_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:hint="ID"
            android:padding="5dp"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/adp_StartDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/adp_ID"
            android:hint="StartDT"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/adp_CMD"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adp_StartDT"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/adp_CMD_text"
            android:hint="CMD"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/adp_Address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/adp_StartDT"
            android:layout_toRightOf="@id/adp_CMD"
            android:text="Address"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/adp_CMD_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adp_StartDT"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/adp_ID"
            android:text="CMD"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/adp_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/adp_StartDT"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/adp_Address_txt"
            android:hint="Address"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/adp_NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adp_CMD"
            android:layout_marginLeft="10dp"
            android:hint="NAME"
            android:textSize="15dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>